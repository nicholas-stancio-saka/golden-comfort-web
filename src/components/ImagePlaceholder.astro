---
interface Props {
  label: string;
  aspectRatio?: '4/3' | '16/9' | '1/1' | '3/4' | '2/1';
  class?: string;
}

const {
  label,
  aspectRatio = '4/3',
  class: className = ''
} = Astro.props;

const aspectClasses = {
  '4/3': 'aspect-[4/3]',
  '16/9': 'aspect-[16/9]',
  '1/1': 'aspect-square',
  '3/4': 'aspect-[3/4]',
  '2/1': 'aspect-[2/1]'
};

const classes = [
  aspectClasses[aspectRatio],
  'bg-gradient-to-br from-stone-200 to-stone-300 rounded-2xl flex items-center justify-center',
  className
].filter(Boolean).join(' ');
---

<div class={classes}>
  <span class="text-stone-500 text-sm font-medium px-4 text-center">{label}</span>
</div>
