---
/**
 * PricingTable - Transparent pricing with retail comparison
 * Shows key sizes with retail anchor for 40% savings messaging
 */
import products from '../data/products.json';

const whatsappBase = `https://wa.me/${products.contact.whatsapp.replace('+', '')}?text=`;

// Get Queen 160×200 prices for comparison (most common size)
const queenPrices = products.series.map(series => {
  const queenKey = Object.keys(series.prices).find(k => k.includes('160'));
  const lowestThickness = series.thicknesses[0];
  return {
    id: series.id,
    name: series.name,
    foam: series.foam,
    feel: series.feel,
    warranty: series.warranty,
    price: queenKey ? series.prices[queenKey][lowestThickness] : 0
  };
});

function formatPrice(price: number): string {
  return `Rp ${(price / 1000000).toFixed(1)}jt`;
}
---

<div class="bg-white rounded-2xl border border-stone-200 overflow-hidden">
  <!-- Header -->
  <div class="bg-stone-900 text-white px-6 py-4">
    <h3 class="text-lg font-bold text-center">Harga Transparan</h3>
    <p class="text-sm text-stone-400 text-center mt-1">Contoh: Queen 160×200 (tinggi terendah)</p>
  </div>

  <!-- Price Table -->
  <div class="overflow-x-auto">
    <table class="w-full">
      <thead class="bg-stone-50">
        <tr>
          <th class="text-left px-4 py-3 text-sm font-semibold text-stone-700">Seri</th>
          <th class="text-left px-4 py-3 text-sm font-semibold text-stone-700">Busa</th>
          <th class="text-left px-4 py-3 text-sm font-semibold text-stone-700">Feel</th>
          <th class="text-right px-4 py-3 text-sm font-semibold text-stone-700">Harga</th>
          <th class="text-center px-4 py-3 text-sm font-semibold text-stone-700">Garansi</th>
        </tr>
      </thead>
      <tbody>
        {queenPrices.map((item, i) => (
          <tr class={`border-t border-stone-100 ${item.id === 'support-plus' ? 'bg-amber-50' : ''}`}>
            <td class="px-4 py-3">
              <span class="font-semibold text-stone-900">{item.name}</span>
              {item.id === 'support-plus' && (
                <span class="ml-2 text-xs bg-amber-500 text-white px-2 py-0.5 rounded-full">Ortopedik</span>
              )}
            </td>
            <td class="px-4 py-3 text-sm font-mono text-stone-600">{item.foam}</td>
            <td class="px-4 py-3 text-sm text-stone-600">{item.feel}</td>
            <td class="px-4 py-3 text-right">
              <span class="font-bold text-stone-900">{formatPrice(item.price)}</span>
            </td>
            <td class="px-4 py-3 text-center">
              <span class="text-xs bg-stone-100 text-stone-600 px-2 py-1 rounded-full">{item.warranty}</span>
            </td>
          </tr>
        ))}
      </tbody>
    </table>
  </div>

  <!-- Retail Comparison -->
  <div class="bg-green-50 px-6 py-4 border-t border-stone-200">
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-3">
      <div>
        <p class="text-sm text-stone-700">
          <strong class="text-green-700">Bandingkan:</strong> Toko retail jual kasur ortopedik 160×200 =
          <span class="line-through text-stone-500">Rp 4-5 juta</span>
        </p>
        <p class="text-sm text-green-700 font-semibold mt-1">
          Golden Comfort Support+ = Rp 2.0jt → Hemat 40-50%!
        </p>
      </div>
      <div class="text-xs text-stone-500">
        *Harga dapat berubah
      </div>
    </div>
  </div>

  <!-- Custom Sizing Note -->
  <div class="bg-amber-50 px-6 py-4 border-t border-stone-200">
    <p class="text-sm text-stone-700 text-center">
      <strong class="text-amber-700">Custom sizing GRATIS!</strong>
      Harga = ukuran standar terdekat ke atas.
      <br class="sm:hidden" />
      <span class="text-stone-500">Contoh: 145×190 → harga 160×200</span>
    </p>
  </div>

  <!-- CTA -->
  <div class="px-6 py-4 border-t border-stone-200 text-center">
    <a
      href={`${whatsappBase}${encodeURIComponent('Halo, saya mau tanya harga kasur untuk ukuran [ISI UKURAN] cm')}`}
      target="_blank"
      rel="noopener noreferrer"
      class="inline-flex items-center bg-green-600 hover:bg-green-700 text-white px-6 py-3 rounded-xl font-semibold transition-colors"
    >
      <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
