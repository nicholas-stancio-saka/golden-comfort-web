---
const navItems = [
  { href: "/", label: "Beranda" },
  { href: "/products", label: "Produk" },
  { href: "/custom-order", label: "Custom" },
  { href: "/faq", label: "FAQ" },
];

const whatsappLink = "https://wa.me/6287778131579";
---

<header class="bg-white/95 backdrop-blur-sm border-b border-stone-100 sticky top-0 z-40">
  <nav class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-1.5">
        <span class="text-xl font-bold text-amber-600">Golden</span>
        <span class="text-xl font-medium text-stone-800">Comfort</span>
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center gap-8">
        {navItems.map((item) => (
          <a
            href={item.href}
            class="text-stone-600 hover:text-amber-600 transition-colors text-sm font-medium"
          >
            {item.label}
          </a>
        ))}
        <a
          href={whatsappLink}
          target="_blank"
          rel="noopener noreferrer"
          class="bg-green-600 hover:bg-green-700 text-white px-5 py-2 rounded-full text-sm font-semibold transition-colors"
        >
          Chat WhatsApp
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-btn"
        class="md:hidden p-2 rounded-lg hover:bg-stone-100 transition-colors"
        aria-label="Toggle menu"
      >
        <svg class="w-6 h-6 text-stone-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
        </svg>
      </button>
    </div>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="hidden md:hidden pb-4">
      <div class="flex flex-col gap-1 pt-2">
        {navItems.map((item) => (
          <a
            href={item.href}
            class="text-stone-600 hover:text-amber-600 hover:bg-stone-50 transition-colors font-medium py-2.5 px-3 rounded-lg"
          >
            {item.label}
          </a>
        ))}
        <a
          href={whatsappLink}
          target="_blank"
          rel="noopener noreferrer"
          class="bg-green-600 hover:bg-green-700 text-white px-4 py-3 rounded-full font-semibold transition-colors text-center mt-2"
        >
          Chat WhatsApp
        </a>
      </div>
    </div>
  </nav>
</header>

<script>
  const btn = document.getElementById('mobile-menu-btn');
  const menu = document.getElementById('mobile-menu');

  btn?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
  });
</script>
