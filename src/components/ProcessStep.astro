const isFilled = icon === 'whatsapp';
---

<div class="flex flex-col items-center text-center">
  <!-- Number + Icon -->
  <div class="relative mb-4">
    <div class="w-16 h-16 bg-amber-100 rounded-2xl flex items-center justify-center">
      <svg
        class="w-8 h-8 text-amber-600"
        fill={isFilled ? "currentColor" : "none"}
        stroke={isFilled ? "none" : "currentColor"}
        viewBox="0 0 24 24"
        set:html={icons[icon]}
      />
    </div>
    <div class="absolute -top-2 -right-2 w-7 h-7 bg-stone-900 text-white rounded-full flex items-center justify-center text-sm font-bold">
      {number}
    </div>
  </div>

  <!-- Content -->
  <h3 class="font-bold text-stone-900 mb-2">{title}</h3>
  <p class="text-sm text-stone-600 leading-relaxed">{description}</p>
</div>
