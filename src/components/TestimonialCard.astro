---
interface Props {
  quote: string;
  name: string;
  location?: string;
  isPlaceholder?: boolean;
}

const { quote, name, location, isPlaceholder = false } = Astro.props;
---

<div class="bg-white rounded-2xl p-6 shadow-sm border border-stone-100">
  {isPlaceholder && (
    <div class="text-xs text-amber-600 font-medium mb-3 uppercase tracking-wide">
      Testimoni Placeholder
    </div>
  )}

  <div class="flex gap-1 text-amber-500 mb-4">
    {[...Array(5)].map(() => (
      <svg class="w-5 h-5 fill-current" viewBox="0 0 20 20">
        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
      </svg>
    ))}
  </div>

  <blockquote class="text-stone-700 mb-4 leading-relaxed">
    "{quote}"
  </blockquote>

  <div class="flex items-center gap-3">
    <div class="w-10 h-10 bg-stone-200 rounded-full flex items-center justify-center">
      <span class="text-stone-500 text-sm font-medium">{name.charAt(0)}</span>
    </div>
    <div>
      <div class="font-semibold text-stone-900">{name}</div>
      {location && <div class="text-sm text-stone-500">{location}</div>}
    </div>
  </div>
</div>
