  <!-- COMMON CUSTOM USE CASES -->
  <Section background="white">
    <div class="text-center mb-10">
      <h2 class="text-2xl lg:text-3xl font-bold text-gc-text mb-3">
        Siapa yang Butuh Ukuran Custom?
      </h2>
