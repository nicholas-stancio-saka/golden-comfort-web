---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Section from '../components/Section.astro';
import Button from '../components/Button.astro';
import FoamComparison from '../components/FoamComparison.astro';
import ProcessStep from '../components/ProcessStep.astro';
import ImagePlaceholder from '../components/ImagePlaceholder.astro';

const whatsappBase = "https://wa.me/6287778131579?text=";
const whatsappConsult = `${whatsappBase}${encodeURIComponent("Halo, saya mau konsultasi tentang kasur.")}`;
const whatsappCustom = `${whatsappBase}${encodeURIComponent("Halo, saya butuh kasur ukuran custom.")}`;
const whatsappOrthopedic = `${whatsappBase}${encodeURIComponent("Halo, saya mau tanya kasur ortopedik untuk sakit punggung.")}`;
---

<Layout title="Kasur Custom & Orthopedic - Workshop Langsung">
  <Header />

  <!-- HERO -->
  <section class="relative bg-gradient-to-b from-gc-cream to-white pt-12 pb-16 lg:pt-20 lg:pb-24">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-10 lg:gap-16 items-center">
        <!-- Text -->
        <div class="text-center lg:text-left">
          <p class="text-gc-gold font-semibold text-sm uppercase tracking-wider mb-3">
            Workshop Kasur Indonesia
          </p>
          <h1 class="text-3xl sm:text-4xl lg:text-5xl font-extrabold text-gc-text mb-6 leading-tight">
            Kasur Custom,<br />
            <span class="text-gc-blue">Dibuat Pas untuk Anda</span>
          </h1>

          <ul class="space-y-3 text-left max-w-md mx-auto lg:mx-0 mb-8">
            <li class="flex items-start gap-3">
              <span class="text-gc-gold mt-1 text-lg">✓</span>
              <span class="text-gc-muted"><strong class="text-gc-text">Ukuran apa saja</strong> — dipan antik? ukuran unik? bisa!</span>
            </li>
            <li class="flex items-start gap-3">
              <span class="text-gc-gold mt-1 text-lg">✓</span>
              <span class="text-gc-muted"><strong class="text-gc-text">Ortopedik asli R70</strong> — bukan D30 "firm" biasa</span>
            </li>
            <li class="flex items-start gap-3">
              <span class="text-gc-gold mt-1 text-lg">✓</span>
              <span class="text-gc-muted"><strong class="text-gc-text">Langsung dari bengkel</strong> — tanpa markup toko</span>
            </li>
            <li class="flex items-start gap-3">
              <span class="text-gc-gold mt-1 text-lg">✓</span>
              <span class="text-gc-muted"><strong class="text-gc-text">Garansi 15-25 tahun</strong> — bukti kualitas</span>
            </li>
          </ul>

          <Button variant="whatsapp" href={whatsappConsult} target="_blank" size="lg">
            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
            </svg>
            Konsultasi Gratis via WhatsApp
          </Button>
        </div>

        <!-- Image -->
        <div class="order-first lg:order-last">
          <ImagePlaceholder label="Foto Workshop / Kasur Custom" aspectRatio="4/3" class="shadow-xl rounded-2xl" />
        </div>
      </div>
    </div>
  </section>

  <!-- WHAT WE MAKE -->
  <Section background="white">
    <div class="text-center mb-12">
      <h2 class="text-2xl lg:text-3xl font-bold text-gc-text mb-4">
        Kami Buat Kasur Sesuai Kebutuhan Anda
      </h2>
      <p class="text-gc-muted max-w-2xl mx-auto">
        Bukan produk standar dari gudang. Setiap kasur dibuat sesuai pesanan — ukuran, kepadatan, dan ketebalan yang Anda butuhkan.
      </p>
    </div>

    <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-6 max-w-4xl mx-auto">
      <div class="bg-gc-cream rounded-2xl p-6 text-center">
        <div class="w-12 h-12 bg-gc-gold/20 rounded-full flex items-center justify-center mx-auto mb-4">
          <svg class="w-6 h-6 text-gc-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 8V4m0 0h4M4 4l5 5m11-1V4m0 0h-4m4 0l-5 5M4 16v4m0 0h4m-4 0l5-5m11 5l-5-5m5 5v-4m0 4h-4"/>
          </svg>
        </div>
        <h3 class="font-bold text-gc-text mb-2">Ukuran Custom</h3>
        <p class="text-sm text-gc-muted">60×90 sampai 200×200+, sudut potong, bentuk unik</p>
      </div>

      <div class="bg-gc-cream rounded-2xl p-6 text-center">
        <div class="w-12 h-12 bg-gc-blue/20 rounded-full flex items-center justify-center mx-auto mb-4">
          <svg class="w-6 h-6 text-gc-blue" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
          </svg>
        </div>
        <h3 class="font-bold text-gc-text mb-2">Pilihan Densitas</h3>
        <p class="text-sm text-gc-muted">D22 empuk sampai R70 ortopedik</p>
      </div>

      <div class="bg-gc-cream rounded-2xl p-6 text-center">
        <div class="w-12 h-12 bg-gc-gold/20 rounded-full flex items-center justify-center mx-auto mb-4">
          <svg class="w-6 h-6 text-gc-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01"/>
          </svg>
        </div>
        <h3 class="font-bold text-gc-text mb-2">Ketebalan Bebas</h3>
        <p class="text-sm text-gc-muted">15cm sampai 30cm+</p>
      </div>

      <div class="bg-gc-cream rounded-2xl p-6 text-center">
        <div class="w-12 h-12 bg-gc-blue/20 rounded-full flex items-center justify-center mx-auto mb-4">
          <svg class="w-6 h-6 text-gc-blue" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"/>
          </svg>
        </div>
        <h3 class="font-bold text-gc-text mb-2">Cover Premium</h3>
        <p class="text-sm text-gc-muted">Knit berkualitas, bukan spunbond murah</p>
      </div>
    </div>

    <div class="text-center mt-10">
      <Button variant="primary" href="/custom">
        Pelajari Custom Sizing →
      </Button>
    </div>
  </Section>

  <!-- WHY R70 (Brief) -->
  <Section background="blue-light">
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <div>
        <h2 class="text-2xl lg:text-3xl font-bold text-gc-text mb-4">
          Ortopedik Asli, Bukan "Firm" Biasa
        </h2>
        <p class="text-gc-muted mb-6">
          Banyak kasur klaim "ortopedik" tapi pakai busa D30 biasa. Kami pakai <strong class="text-gc-text">R70</strong> — busa rebonded densitas 70 kg/m³ yang benar-benar menopang tulang belakang.
        </p>
        <Button variant="ghost" href="/orthopedic">
          Pelajari R70 vs D30 →
        </Button>
      </div>
      <div>
        <FoamComparison />
      </div>
    </div>
  </Section>

  <!-- HOW IT WORKS -->
  <Section background="white">
    <div class="text-center mb-10">
      <h2 class="text-2xl lg:text-3xl font-bold text-gc-text mb-3">
        Cara Pesan (Mudah!)
      </h2>
      <p class="text-gc-muted">Tidak perlu bingung. Konsultasi dulu, dapat quote, baru putuskan.</p>
    </div>

    <div class="grid sm:grid-cols-3 gap-8 max-w-3xl mx-auto">
      <ProcessStep
        number={1}
        icon="whatsapp"
        title="Chat WhatsApp"
        description="Ceritakan kebutuhan: ukuran, masalah tidur, budget"
      />
      <ProcessStep
        number={2}
        icon="quote"
        title="Dapat Quote"
        description="Kami kasih rekomendasi + harga transparan"
      />
      <ProcessStep
        number={3}
        icon="truck"
        title="Dibuat & Dikirim"
        description="7-14 hari kerja, gratis ongkir JABODETABEK"
      />
    </div>

    <div class="text-center mt-10">
      <Button variant="whatsapp" href={whatsappConsult} target="_blank">
        <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
          <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
        </svg>
        Mulai Konsultasi
      </Button>
    </div>
  </Section>

  <!-- TRUST SIGNALS -->
  <Section background="cream">
    <div class="text-center mb-10">
      <h2 class="text-2xl lg:text-3xl font-bold text-gc-text mb-3">
        Kenapa Percaya Golden Comfort?
      </h2>
    </div>

    <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-6 max-w-4xl mx-auto">
      <div class="text-center p-6 bg-white rounded-2xl shadow-sm">
        <div class="text-3xl font-bold text-gc-gold mb-2">15-25</div>
        <div class="text-sm font-medium text-gc-text">Tahun Garansi</div>
        <div class="text-xs text-gc-muted mt-1">Busa kempes? Kami ganti</div>
      </div>
      <div class="text-center p-6 bg-white rounded-2xl shadow-sm">
        <div class="text-3xl font-bold text-gc-blue mb-2">Tangsel</div>
        <div class="text-sm font-medium text-gc-text">Workshop</div>
        <div class="text-xs text-gc-muted mt-1">Bisa kunjungi (by appointment)</div>
      </div>
      <div class="text-center p-6 bg-white rounded-2xl shadow-sm">
        <div class="text-3xl font-bold text-gc-gold mb-2">Gratis</div>
        <div class="text-sm font-medium text-gc-text">Ongkir JABODETABEK</div>
        <div class="text-xs text-gc-muted mt-1">Beberapa area ada tambahan</div>
      </div>
      <div class="text-center p-6 bg-white rounded-2xl shadow-sm">
        <div class="text-3xl font-bold text-gc-blue mb-2">COD</div>
        <div class="text-sm font-medium text-gc-text">Tersedia</div>
        <div class="text-xs text-gc-muted mt-1">Bayar saat terima</div>
      </div>
    </div>
  </Section>

  <!-- MINI FAQ -->
  <Section background="white">
    <div class="max-w-3xl mx-auto">
      <div class="text-center mb-8">
        <h2 class="text-2xl lg:text-3xl font-bold text-gc-text mb-3">
          Pertanyaan Umum
        </h2>
      </div>

      <div class="space-y-3">
        <details class="group bg-gc-cream rounded-xl">
          <summary class="flex justify-between items-center cursor-pointer p-4 font-medium text-gc-text">
            <span>Berapa lama produksi kasur custom?</span>
            <svg class="w-5 h-5 text-gc-muted group-open:rotate-180 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
            </svg>
          </summary>
          <div class="px-4 pb-4 text-gc-muted">
            7-14 hari kerja setelah konfirmasi + deposit. Untuk ukuran standar yang ada stok, bisa lebih cepat.
          </div>
        </details>

        <details class="group bg-gc-cream rounded-xl">
          <summary class="flex justify-between items-center cursor-pointer p-4 font-medium text-gc-text">
            <span>Bisa COD / bayar di tempat?</span>
            <svg class="w-5 h-5 text-gc-muted group-open:rotate-180 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
            </svg>
          </summary>
          <div class="px-4 pb-4 text-gc-muted">
            Bisa, untuk area JABODETABEK. Deposit 30% saat pesan, sisanya bayar saat terima.
          </div>
        </details>

        <details class="group bg-gc-cream rounded-xl">
          <summary class="flex justify-between items-center cursor-pointer p-4 font-medium text-gc-text">
            <span>Kalau kasur nggak cocok gimana?</span>
            <svg class="w-5 h-5 text-gc-muted group-open:rotate-180 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
            </svg>
          </summary>
          <div class="px-4 pb-4 text-gc-muted">
            7 hari pertama, kalau nggak cocok kami bantu solusi — tukar tinggi atau kepadatan. Garansi material 15-25 tahun.
          </div>
        </details>

        <details class="group bg-gc-cream rounded-xl">
          <summary class="flex justify-between items-center cursor-pointer p-4 font-medium text-gc-text">
            <span>Apa bedanya dengan kasur toko?</span>
            <svg class="w-5 h-5 text-gc-muted group-open:rotate-180 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
            </svg>
          </summary>
          <div class="px-4 pb-4 text-gc-muted">
            Langsung dari bengkel — tanpa markup toko, tanpa biaya showroom. Kualitas sama (atau lebih baik), harga lebih fair.
          </div>
        </details>
      </div>

      <div class="text-center mt-6">
        <Button variant="ghost" href="/faq">
          Lihat Semua FAQ →
        </Button>
      </div>
    </div>
  </Section>

  <!-- FINAL CTA -->
  <section class="bg-gc-text py-16 lg:py-20">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-2xl lg:text-3xl font-bold text-white mb-4">
        Siap Dapat Kasur yang Pas?
      </h2>
      <p class="text-gray-400 mb-8">
        Konsultasi gratis via WhatsApp. Ceritakan kebutuhan Anda, kami bantu rekomendasikan.
      </p>

      <Button variant="whatsapp" href={whatsappConsult} target="_blank" size="lg">
        <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
          <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
        </svg>
        Chat WhatsApp Sekarang
      </Button>

      <div class="mt-8 pt-8 border-t border-gray-700 text-sm text-gray-400">
        <p><strong class="text-white">Workshop:</strong> Tangerang Selatan</p>
        <p class="mt-1"><strong class="text-white">Jam:</strong> Senin-Jumat 09-17, Sabtu 09-12</p>
      </div>
    </div>
  </section>

  <Footer />
</Layout>
