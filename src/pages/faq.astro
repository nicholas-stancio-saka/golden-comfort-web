---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Section from '../components/Section.astro';
import Button from '../components/Button.astro';

const faqs = [
  {
    category: "Produk",
    icon: "M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4",
    questions: [
      {
        q: "Apa bedanya Essential, Comfort, Support, dan Support+?",
        a: "Essential (D22) untuk budget/kamar tamu, Comfort (D25) untuk tidur harian, Support (D30) untuk yang suka keras, dan Support+ (R70+D22) untuk orthopedic asli. Makin tinggi seri, makin lama garansinya (15-25 tahun)."
      },
      {
        q: "Apa itu busa R70? Kenapa beda dengan D30?",
        a: "D-number menunjukkan density (kepadatan). D30 = 30 kg/m³, R70 = 70 kg/m³. Busa R70 jauh lebih padat, memberikan support tulang belakang yang sesungguhnya — ini standar orthopedic asli. D30 hanya terasa keras, tapi bukan orthopedic grade."
      },
      {
        q: "Cover pakai apa?",
        a: "Semua model pakai cover knit premium — sama dengan yang dipakai brand 5-10 juta. Tidak ada opsi cover murah."
      },
      {
        q: "Bisa request tingkat kekerasan?",
        a: "Ya, dalam batas series yang Anda pilih. Essential = medium, Comfort = medium-firm, Support = firm, Support+ = orthopedic."
      },
      {
        q: "Kenapa harga bisa lebih murah dari toko?",
        a: "Kami workshop langsung, tanpa showroom mewah dan tim marketing besar. Biaya overhead rendah = hemat 25-40% yang kami teruskan ke Anda. Kualitas sama, harga lebih wajar."
      }
    ]
  },
  {
    category: "Custom Order",
    icon: "M4 8V4m0 0h4M4 4l5 5m11-1V4m0 0h-4m4 0l-5 5M4 16v4m0 0h4m-4 0l5-5m11 5l-5-5m5 5v-4m0 4h-4",
    questions: [
      {
        q: "Ukuran minimum dan maksimum custom?",
        a: "Minimum sekitar 60×90 cm (bayi/anak), maksimum 200×200 cm (Super King). Lebih besar? Hubungi kami."
      },
      {
        q: "Bagaimana cara hitung harga custom?",
        a: "Harga = ukuran standar terdekat ke ATAS. Contoh: 121×190 cm → harga Queen 160×200 cm."
      },
      {
        q: "Bisa bikin bentuk L atau bulat?",
        a: "Bisa. Untuk bentuk non-standar, kami hitung berdasarkan total bahan yang digunakan."
      },
      {
        q: "Berapa lama produksi custom?",
        a: "7-14 hari kerja + 2-5 hari pengiriman."
      }
    ]
  },
  {
    category: "Garansi",
    icon: "M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z",
    questions: [
      {
        q: "Garansi mencakup apa?",
        a: "Kempes berlebihan (>1.5 inch), jahitan lepas, kerusakan struktur busa. Tidak mencakup noda, kerusakan penggunaan salah."
      },
      {
        q: "Apa bedanya 15, 20, 25 tahun?",
        a: "15 tahun = anti-kempes. 20 tahun = + integritas struktur. 25 tahun = coverage penuh termasuk edge support."
      },
      {
        q: "Bagaimana klaim garansi?",
        a: "Kirim foto kerusakan + bukti pembelian ke WhatsApp. Evaluasi 3-5 hari kerja."
      }
    ]
  },
  {
    category: "Pengiriman",
    icon: "M13 16V6a1 1 0 00-1-1H4a1 1 0 00-1 1v10a1 1 0 001 1h1m8-1a1 1 0 01-1 1H9m4-1V8a1 1 0 011-1h2.586a1 1 0 01.707.293l3.414 3.414a1 1 0 01.293.707V16a1 1 0 01-1 1h-1m-6-1a1 1 0 001 1h1M5 17a2 2 0 104 0m-4 0a2 2 0 114 0m6 0a2 2 0 104 0m-4 0a2 2 0 114 0",
    questions: [
      {
        q: "Area mana free delivery?",
        a: "Sebagian besar JABODETABEK. Beberapa area terpencil tidak termasuk — chat untuk konfirmasi."
      },
      {
        q: "Bisa COD?",
        a: "Bisa, untuk area JABODETABEK."
      },
      {
        q: "Metode pembayaran?",
        a: "Transfer bank dan COD. Custom order: 30% deposit dulu, 70% sebelum kirim."
      },
      {
        q: "Biaya naik ke lantai?",
        a: "Standar: sampai depan pintu. Premium (+Rp 100k): bawa ke kamar + pasang."
      }
    ]
  }
];

const whatsappLink = "https://wa.me/6287778131579";
---

<Layout title="FAQ" description="Pertanyaan yang sering diajukan tentang kasur Golden Comfort. Produk, garansi, pengiriman, dan custom order.">
  <Header />

  <!-- Hero -->
  <section class="bg-gradient-to-b from-amber-50 to-white py-12 lg:py-16">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-3xl lg:text-4xl font-bold text-stone-900 mb-4">
        Pertanyaan Umum
      </h1>
      <p class="text-stone-600">
        Tidak ketemu jawabannya? <a href={whatsappLink} class="text-amber-600 hover:underline">Chat kami</a>
      </p>
    </div>
  </section>

  <!-- FAQ Sections -->
  <Section background="white">
    <div class="grid md:grid-cols-2 gap-8 lg:gap-12">
      {faqs.map((section) => (
        <div>
          <div class="flex items-center gap-3 mb-6">
            <div class="w-10 h-10 bg-amber-100 rounded-xl flex items-center justify-center">
              <svg class="w-5 h-5 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d={section.icon}/>
              </svg>
            </div>
            <h2 class="text-xl font-bold text-stone-900">{section.category}</h2>
          </div>
          <div class="space-y-3">
            {section.questions.map((faq) => (
              <details class="group">
                <summary class="flex justify-between items-start cursor-pointer p-4 rounded-xl bg-stone-50 hover:bg-stone-100 transition-colors">
                  <span class="font-medium text-stone-800 text-sm pr-4">{faq.q}</span>
                  <svg class="w-4 h-4 text-stone-400 group-open:rotate-180 transition-transform flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                  </svg>
                </summary>
                <div class="px-4 pb-4 pt-2 text-sm text-stone-600 leading-relaxed">
                  {faq.a}
                </div>
              </details>
            ))}
          </div>
        </div>
      ))}
    </div>
  </Section>

  <!-- CTA -->
  <Section background="cream" size="sm">
    <div class="text-center">
      <h2 class="text-xl font-bold text-stone-900 mb-3">
        Masih Ada Pertanyaan?
      </h2>
      <p class="text-stone-600 mb-6">
        Chat langsung via WhatsApp
      </p>
      <Button variant="whatsapp" href={whatsappLink} target="_blank">
        Chat WhatsApp
      </Button>
    </div>
  </Section>

  <Footer />
</Layout>
