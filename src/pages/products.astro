---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import products from '../data/products.json';

function formatPrice(price: number): string {
  return new Intl.NumberFormat('id-ID').format(price);
}

const whatsappBase = "https://wa.me/6287778131579?text=";
---

<Layout title="Produk & Harga" description="Daftar lengkap kasur Golden Comfort dengan harga. 4 seri: Essential, Comfort, Support, Support+. Ukuran custom tersedia.">
  <Header />

  <!-- Hero -->
  <section class="bg-gradient-to-br from-amber-50 to-white py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-4xl lg:text-5xl font-bold text-gray-900 mb-4">
        Produk & Harga
      </h1>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">
        4 seri untuk setiap kebutuhan. Semua harga sudah termasuk cover knit premium.
        Gratis ongkir untuk sebagian besar JABODETABEK.
      </p>
    </div>
  </section>

  <!-- Products -->
  <section class="py-12 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      {products.series.map((series, index) => {
        const whatsappLink = `${whatsappBase}${encodeURIComponent(`Halo, saya tertarik dengan kasur ${series.name}. Bisa info lebih lanjut?`)}`;
        const sizes = Object.keys(series.prices);
        const thicknesses = series.thicknesses;

        return (
          <div id={series.id} class={`${index > 0 ? 'mt-16 pt-16 border-t border-gray-200' : ''}`}>
            <!-- Series Header -->
            <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between mb-8">
              <div>
                <div class="flex items-center gap-3 mb-2">
                  <h2 class="text-3xl font-bold text-gray-900">{series.name}</h2>
                  <span class="bg-amber-100 text-amber-800 text-sm font-medium px-3 py-1 rounded-full">
                    {series.warranty}
                  </span>
                </div>
                <p class="text-lg text-amber-600 font-medium mb-2">{series.feel} • Busa {series.foam}</p>
                <p class="text-gray-600 max-w-2xl">{series.description}</p>
                <p class="text-sm text-gray-500 mt-2">
                  <span class="font-medium">Cocok untuk:</span> {series.target}
                </p>
                {series.construction && (
                  <div class="mt-3 p-3 bg-blue-50 rounded-lg inline-block">
                    <p class="text-sm text-blue-800 font-medium">Konstruksi 2 Lapis:</p>
                    <ul class="text-sm text-blue-700 mt-1">
                      {Object.entries(series.construction).map(([thickness, detail]) => (
                        <li>• {thickness}: {detail}</li>
                      ))}
                    </ul>
                  </div>
                )}
              </div>
              <a
                href={whatsappLink}
                target="_blank"
                rel="noopener noreferrer"
                class="mt-4 lg:mt-0 inline-flex items-center bg-green-500 hover:bg-green-600 text-white px-6 py-3 rounded-lg font-medium transition-colors"
              >
                <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
                </svg>
                Tanya {series.name}
              </a>
            </div>

            <!-- Price Table -->
            <div class="overflow-x-auto">
              <table class="w-full border-collapse">
                <thead>
                  <tr class="bg-gray-100">
                    <th class="text-left py-3 px-4 font-semibold text-gray-900 border-b">Ukuran</th>
                    {thicknesses.map((t) => (
                      <th class="text-center py-3 px-4 font-semibold text-gray-900 border-b">{t}</th>
                    ))}
                  </tr>
                </thead>
                <tbody>
                  {sizes.map((size, i) => (
                    <tr class={i % 2 === 0 ? 'bg-white' : 'bg-gray-50'}>
                      <td class="py-3 px-4 font-medium text-gray-900 border-b">{size}</td>
                      {thicknesses.map((t) => (
                        <td class="text-center py-3 px-4 text-gray-700 border-b">
                          Rp {formatPrice(series.prices[size][t])}
                        </td>
                      ))}
                    </tr>
                  ))}
                </tbody>
              </table>
            </div>
          </div>
        );
      })}
    </div>
  </section>

  <!-- Custom Sizing -->
  <section class="py-12 bg-amber-50">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-2xl font-bold text-gray-900 mb-4 text-center">Ukuran Custom</h2>
      <p class="text-gray-600 text-center mb-6">
        {products.customSizing.note}
      </p>

      <div class="bg-white rounded-xl p-6 shadow-sm">
        <h3 class="font-semibold text-gray-900 mb-3">Contoh Perhitungan Harga:</h3>
        <div class="space-y-2">
          {products.customSizing.examples.map((ex) => (
            <div class="flex items-center text-gray-700">
              <span class="bg-gray-100 px-3 py-1 rounded font-mono text-sm">{ex.custom}</span>
              <svg class="w-4 h-4 mx-3 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"/>
              </svg>
              <span>Harga ukuran <span class="font-semibold">{ex.priced_as}</span></span>
            </div>
          ))}
        </div>
        <p class="mt-4 text-sm text-gray-500">
          Waktu produksi: {products.customSizing.timeline}
        </p>
      </div>

      <div class="text-center mt-8">
        <a
          href="/custom-order"
          class="inline-block bg-amber-500 hover:bg-amber-600 text-white px-8 py-3 rounded-xl font-semibold transition-colors"
        >
          Cara Order Custom
        </a>
      </div>
    </div>
  </section>

  <Footer />
</Layout>
