---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Section from '../components/Section.astro';
import Button from '../components/Button.astro';
import ImagePlaceholder from '../components/ImagePlaceholder.astro';

const whatsappLink = "https://wa.me/6287778131579?text=" + encodeURIComponent("Halo, saya mau order kasur custom. Ukuran yang saya butuhkan: [ISI UKURAN P×L cm]");

const steps = [
  {
    number: "1",
    title: "Ukur & Kirim",
    description: "Ukur tempat tidur Anda (dalam ke dalam). Kirim ukuran via WhatsApp + pilih seri yang diinginkan."
  },
  {
    number: "2",
    title: "Kami Buatkan",
    description: "Setelah deposit 30%, kami produksi kasur dalam 7-14 hari kerja. Update progress via WhatsApp."
  },
  {
    number: "3",
    title: "Antar & Pasang",
    description: "Pelunasan 70%, lalu kami antar gratis ke rumah Anda (sebagian besar JABODETABEK)."
  }
];

const examples = [
  { custom: "77×165 cm", standard: "90×200 cm" },
  { custom: "121×190 cm", standard: "160×200 cm" },
  { custom: "115×200 cm", standard: "120×200 cm" },
];
---

<Layout title="Custom Order" description="Cara order kasur custom ukuran di Golden Comfort. Proses mudah, produksi 7-14 hari, gratis ongkir JABODETABEK.">
  <Header />

  <!-- Hero -->
  <section class="bg-gradient-to-b from-amber-50 to-white py-16 lg:py-20">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div class="text-center lg:text-left">
          <h1 class="text-3xl lg:text-4xl font-bold text-stone-900 mb-4">
            Ukuran Tidak Standar?<br />Tidak Masalah.
          </h1>
          <p class="text-lg text-stone-600 mb-8">
            Tempat tidur antik, ruang sempit, bentuk unik — kami buat semuanya.
            Proses simple, 7-14 hari jadi.
          </p>
          <Button variant="whatsapp" href={whatsappLink} target="_blank" size="lg">
            Order Custom via WhatsApp
          </Button>
        </div>
        <div>
          <ImagePlaceholder label="Foto kasur custom / ukuran unik" aspectRatio="4/3" class="shadow-lg" />
        </div>
      </div>
    </div>
  </section>

  <!-- 3 Steps -->
  <Section background="white">
    <div class="text-center mb-12">
      <h2 class="text-2xl lg:text-3xl font-bold text-stone-900 mb-3">
        Proses Sederhana
      </h2>
      <p class="text-stone-600">3 langkah mudah dari ukuran ke kasur jadi</p>
    </div>

    <div class="grid md:grid-cols-3 gap-8">
      {steps.map((step) => (
        <div class="text-center">
          <div class="w-14 h-14 bg-amber-100 rounded-2xl flex items-center justify-center mx-auto mb-5">
            <span class="text-2xl font-bold text-amber-600">{step.number}</span>
          </div>
          <h3 class="text-lg font-bold text-stone-900 mb-2">{step.title}</h3>
          <p class="text-stone-600 text-sm leading-relaxed">{step.description}</p>
        </div>
      ))}
    </div>
  </Section>

  <!-- Pricing Logic -->
  <Section background="cream">
    <div class="max-w-2xl mx-auto">
      <div class="text-center mb-8">
        <div class="inline-block bg-green-100 text-green-700 text-sm font-semibold px-4 py-2 rounded-full mb-4">
          Custom Sizing GRATIS!
        </div>
        <h2 class="text-2xl font-bold text-stone-900 mb-3">Cara Hitung Harga</h2>
        <p class="text-stone-600">
          Harga = ukuran standar terdekat <strong>ke atas</strong>.
          Anda bayar standar, dapat ukuran custom.
        </p>
      </div>

      <div class="bg-white rounded-2xl p-6 shadow-sm border border-stone-200">
        <div class="space-y-4">
          {examples.map((ex) => (
            <div class="flex items-center justify-between text-sm">
              <span class="font-mono text-stone-700 bg-stone-100 px-3 py-1.5 rounded-lg">{ex.custom}</span>
              <svg class="w-5 h-5 text-stone-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"/>
              </svg>
              <span class="font-semibold text-stone-900">Harga {ex.standard}</span>
            </div>
          ))}
        </div>
      </div>

      <p class="text-center text-sm text-stone-500 mt-6">
        Bentuk tidak standar (L-shape, corner cut, dll) → hitung per volume + tambahan jasa
      </p>
    </div>
  </Section>

  <!-- Timeline -->
  <Section background="white">
    <div class="text-center mb-10">
      <h2 class="text-2xl font-bold text-stone-900 mb-3">Timeline</h2>
    </div>

    <div class="grid grid-cols-3 gap-4 max-w-2xl mx-auto">
      <div class="bg-stone-50 rounded-2xl p-5 text-center">
        <div class="text-3xl font-bold text-amber-600 mb-1">1</div>
        <div class="text-xs text-stone-500 mb-2">hari</div>
        <div class="text-sm font-medium text-stone-800">Quotation</div>
      </div>
      <div class="bg-stone-50 rounded-2xl p-5 text-center">
        <div class="text-3xl font-bold text-amber-600 mb-1">7-14</div>
        <div class="text-xs text-stone-500 mb-2">hari kerja</div>
        <div class="text-sm font-medium text-stone-800">Produksi</div>
      </div>
      <div class="bg-stone-50 rounded-2xl p-5 text-center">
        <div class="text-3xl font-bold text-amber-600 mb-1">2-5</div>
        <div class="text-xs text-stone-500 mb-2">hari</div>
        <div class="text-sm font-medium text-stone-800">Pengiriman</div>
      </div>
    </div>

    <p class="text-center text-stone-600 mt-6">
      Total: <span class="font-semibold">~2-3 minggu</span> dari deposit sampai di rumah
    </p>
  </Section>

  <!-- CTA -->
  <section class="bg-gradient-to-br from-amber-600 to-amber-700 py-16">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-2xl lg:text-3xl font-bold text-white mb-4">
        Siap Order Custom?
      </h2>
      <p class="text-lg text-amber-100 mb-8">
        Chat sekarang, kirim ukuran Anda
      </p>
      <Button variant="secondary" href={whatsappLink} target="_blank" size="lg">
        <svg class="w-5 h-5 mr-2 text-green-600" fill="currentColor" viewBox="0 0 24 24">
          <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
        </svg>
        Order Custom via WhatsApp
      </Button>
    </div>
  </section>

  <Footer />
</Layout>
