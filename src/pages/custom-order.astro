---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const whatsappLink = "https://wa.me/6287778131579?text=" + encodeURIComponent("Halo, saya mau order kasur custom. Ukuran yang saya butuhkan: [ISI UKURAN P×L×T cm]");

const steps = [
  {
    number: "1",
    title: "Ukur Tempat Tidur",
    description: "Ukur panjang × lebar × tebal yang Anda butuhkan dalam cm. Pastikan ukuran akurat — kami buat sesuai pesanan."
  },
  {
    number: "2",
    title: "Kirim via WhatsApp",
    description: "Kirim ukuran ke WhatsApp kami beserta preferensi series (Essential/Comfort/Support/Support+) dan tingkat kekerasan."
  },
  {
    number: "3",
    title: "Terima Quotation",
    description: "Kami hitung harga berdasarkan ukuran standar terdekat ke atas dan kirim quotation lengkap."
  },
  {
    number: "4",
    title: "Deposit 30%",
    description: "Setelah setuju dengan quotation, transfer deposit 30% untuk memulai produksi."
  },
  {
    number: "5",
    title: "Produksi 7-14 Hari",
    description: "Kasur dibuat khusus sesuai ukuran Anda. Kami update progress via WhatsApp."
  },
  {
    number: "6",
    title: "Pelunasan & Pengiriman",
    description: "Lunasi sisa 70% sebelum pengiriman. Gratis ongkir untuk sebagian besar JABODETABEK."
  }
];

const examples = [
  { custom: "77×165 cm", standard: "90×200 cm", note: "Tempat tidur antik" },
  { custom: "121×190 cm", standard: "160×200 cm", note: "Ruang sempit" },
  { custom: "115×200 cm", standard: "120×200 cm", note: "Ukuran non-standar" },
  { custom: "Bentuk L", standard: "Harga custom", note: "Sudut kamar" },
];
---

<Layout title="Custom Order" description="Cara order kasur custom ukuran di Golden Comfort. Proses mudah, produksi 7-14 hari, gratis ongkir JABODETABEK.">
  <Header />

  <!-- Hero -->
  <section class="bg-gradient-to-br from-amber-50 to-white py-12">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-4xl lg:text-5xl font-bold text-gray-900 mb-4">
        Order Kasur Custom
      </h1>
      <p class="text-lg text-gray-600 mb-6">
        Ukuran tidak standar? Tempat tidur antik? Ruang sempit?
        Kami buat kasur sesuai ukuran Anda.
      </p>
      <a
        href={whatsappLink}
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center bg-green-500 hover:bg-green-600 text-white px-8 py-4 rounded-xl font-semibold text-lg transition-all hover:scale-105 shadow-lg"
      >
        <svg class="w-6 h-6 mr-2" fill="currentColor" viewBox="0 0 24 24">
          <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
        </svg>
        Order Custom Sekarang
      </a>
    </div>
  </section>

  <!-- Process Steps -->
  <section class="py-16 bg-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-gray-900 mb-12 text-center">
        Cara Order
      </h2>

      <div class="space-y-8">
        {steps.map((step, i) => (
          <div class="flex gap-6">
            <div class="flex-shrink-0">
              <div class="w-12 h-12 bg-amber-500 rounded-full flex items-center justify-center text-white font-bold text-xl">
                {step.number}
              </div>
              {i < steps.length - 1 && (
                <div class="w-0.5 h-16 bg-amber-200 mx-auto mt-2"></div>
              )}
            </div>
            <div class="pt-2">
              <h3 class="text-xl font-bold text-gray-900 mb-2">{step.title}</h3>
              <p class="text-gray-600">{step.description}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Pricing Examples -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-gray-900 mb-4 text-center">
        Contoh Harga Custom
      </h2>
      <p class="text-gray-600 text-center mb-8">
        Harga dihitung berdasarkan ukuran standar terdekat <strong>ke atas</strong>.
        Anda bayar harga ukuran standar, dapat ukuran custom.
      </p>

      <div class="bg-white rounded-xl shadow-sm overflow-hidden">
        <table class="w-full">
          <thead class="bg-gray-100">
            <tr>
              <th class="text-left py-3 px-4 font-semibold text-gray-900">Ukuran Custom</th>
              <th class="text-left py-3 px-4 font-semibold text-gray-900">Harga Ukuran</th>
              <th class="text-left py-3 px-4 font-semibold text-gray-900">Keterangan</th>
            </tr>
          </thead>
          <tbody>
            {examples.map((ex, i) => (
              <tr class={i % 2 === 0 ? 'bg-white' : 'bg-gray-50'}>
                <td class="py-3 px-4 font-mono text-gray-900">{ex.custom}</td>
                <td class="py-3 px-4 font-medium text-amber-600">{ex.standard}</td>
                <td class="py-3 px-4 text-gray-600">{ex.note}</td>
              </tr>
            ))}
          </tbody>
        </table>
      </div>

      <div class="mt-6 p-4 bg-blue-50 rounded-lg">
        <p class="text-blue-800 text-sm">
          <strong>Contoh:</strong> Anda butuh ukuran 121×190 cm. Ukuran standar terdekat ke atas adalah 160×200 cm.
          Jadi Anda bayar harga Queen 160×200, dapat kasur custom 121×190 cm.
        </p>
      </div>
    </div>
  </section>

  <!-- Timeline -->
  <section class="py-16 bg-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-gray-900 mb-8 text-center">
        Timeline
      </h2>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div class="bg-amber-50 rounded-xl p-6 text-center">
          <div class="text-4xl font-bold text-amber-600 mb-2">1</div>
          <div class="text-gray-600">hari</div>
          <div class="font-medium text-gray-900 mt-2">Quotation</div>
        </div>
        <div class="bg-amber-50 rounded-xl p-6 text-center">
          <div class="text-4xl font-bold text-amber-600 mb-2">7-14</div>
          <div class="text-gray-600">hari kerja</div>
          <div class="font-medium text-gray-900 mt-2">Produksi</div>
        </div>
        <div class="bg-amber-50 rounded-xl p-6 text-center">
          <div class="text-4xl font-bold text-amber-600 mb-2">2-5</div>
          <div class="text-gray-600">hari</div>
          <div class="font-medium text-gray-900 mt-2">Pengiriman</div>
        </div>
      </div>

      <p class="text-center text-gray-600 mt-6">
        Total: <strong>~2-3 minggu</strong> dari deposit sampai di rumah Anda.
      </p>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-16 bg-gradient-to-r from-amber-500 to-amber-600">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl font-bold text-white mb-4">
        Siap Order Custom?
      </h2>
      <p class="text-xl text-amber-100 mb-8">
        Chat sekarang, kirim ukuran Anda. Konsultasi gratis!
      </p>
      <a
        href={whatsappLink}
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center bg-white hover:bg-gray-100 text-amber-600 px-8 py-4 rounded-xl font-semibold text-lg transition-colors"
      >
        <svg class="w-6 h-6 mr-2" fill="currentColor" viewBox="0 0 24 24">
          <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
        </svg>
        Order Custom via WhatsApp
      </a>
    </div>
  </section>

  <Footer />
</Layout>
